<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_rtm_search_item_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:paddingStart="32dp"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/default_padding"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        android:singleLine="true"
        android:text="Boris"
        android:textColor="@color/light_green"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_rtm_search_item_role"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rtm_child_member_item_bg"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:text="Speaker"
        android:textColor="@color/agora_edit_nickname_hint_color"
        android:textSize="12sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_rtm_search_item_nickname"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>