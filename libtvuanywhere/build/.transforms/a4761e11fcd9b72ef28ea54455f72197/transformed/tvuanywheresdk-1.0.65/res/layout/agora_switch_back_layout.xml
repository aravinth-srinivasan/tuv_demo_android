<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/agora_switch_back_bg">

    <ImageView
        android:id="@+id/iv_switch_to_partyline"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_agora_switch_to_partyline_svg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Return to Partyline"
        android:textColor="@android:color/white"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_switch_to_partyline"
        app:layout_constraintStart_toEndOf="@id/iv_switch_to_partyline"
        app:layout_constraintTop_toTopOf="@id/iv_switch_to_partyline" />
</androidx.constraintlayout.widget.ConstraintLayout>