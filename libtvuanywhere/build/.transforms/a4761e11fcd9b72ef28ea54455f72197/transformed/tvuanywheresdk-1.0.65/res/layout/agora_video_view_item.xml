<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/agora_video_item_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/agora_video_item_bg_default" />

    <TextView
        android:id="@+id/tv_partyline_output_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/red"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingStart="4dp"
        android:paddingTop="2dp"
        android:paddingEnd="4dp"
        android:paddingBottom="2dp"
        android:singleLine="true"
        android:text="Output to main window"
        android:textColor="@color/agora_edit_nickname_hint_color"
        android:textSize="12sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_partyline_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/agora_show_nickname_bg"
        android:ellipsize="middle"
        android:singleLine="true"
        android:textColor="@color/agora_edit_nickname_hint_color"
        android:textSize="13sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_partyline_private_channel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Private channel..."
        android:textColor="@color/agora_edit_nickname_hint_color"
        android:textSize="13sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_partyline_center_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:ellipsize="middle"
        android:singleLine="true"
        android:textColor="@color/agora_edit_nickname_hint_color"
        android:textSize="16sp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_agora_sound"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/default_padding"
        android:src="@drawable/ic_agora_sound_svg"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/iv_agora_video"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/default_padding"
        android:layout_toEndOf="@id/iv_agora_sound"
        android:src="@drawable/ic_agora_disable_video_svg"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/iv_agora_network"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@id/tv_partyline_output_message"
        android:src="@drawable/ic_agora_network_quality_poor_svg"
        android:visibility="invisible" />
</merge>