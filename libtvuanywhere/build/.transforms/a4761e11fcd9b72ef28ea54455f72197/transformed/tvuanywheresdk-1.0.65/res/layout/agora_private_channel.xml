<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="4dp"
    android:paddingTop="2dp"
    android:paddingEnd="4dp"
    android:paddingBottom="2dp">

    <TextView
        android:id="@+id/tv_private_channel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@id/divider_private_channel"
        android:ellipsize="middle"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/agora_private_chat"
        android:textColor="@android:color/white"
        android:textSize="13sp" />

    <View
        android:id="@+id/divider_private_channel"
        style="@style/vertical_divider"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_alignTop="@id/tv_private_channel"
        android:layout_alignBottom="@id/tv_private_channel"
        android:layout_marginStart="@dimen/activity_vertical_margin"
        android:layout_marginEnd="@dimen/activity_vertical_margin"
        android:layout_toLeftOf="@+id/iv_agora_private_chat"
        android:background="@android:color/white" />

    <ImageView
        android:id="@+id/iv_agora_private_chat"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="1dp"
        android:layout_toLeftOf="@+id/tv_questioner_position"
        android:src="@drawable/ic_agora_private_channel_chat_svg" />

    <TextView
        android:id="@+id/tv_questioner_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="2dp"
        android:gravity="center"
        android:text="0"
        android:textColor="@android:color/white"
        android:textSize="13sp"
        android:visibility="invisible" />
</merge>