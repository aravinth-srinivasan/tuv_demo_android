<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/agora_control_message_bg_shape">

    <LinearLayout
        android:id="@+id/message_dialog_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_control_icon"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/ic_agora_enable_video_svg" />

        <TextView
            android:id="@+id/tv_control_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_padding"
            android:gravity="center"
            android:text="Host has your microphone on"
            android:textColor="@color/agora_edit_nickname_hint_color"
            android:textSize="14sp" />
    </LinearLayout>
</RelativeLayout>