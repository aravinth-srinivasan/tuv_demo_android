        android:layout_marginStart="@dimen/top_audio_volume_margin_start"/>

    <View
        android:id="@+id/volume_12"
        android:layout_width="@dimen/top_audio_volume_width"
        android:layout_height="@dimen/top_audio_volume_height"
        android:background="@drawable/shape_audio_volume_min"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/volume_11"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/top_audio_volume_margin_start"/>


