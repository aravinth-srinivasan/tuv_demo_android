<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/default_padding"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/default_padding">

    <TextView
        android:id="@+id/tv_rtm_child_member_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="Boris"
        android:textColor="@color/agora_edit_nickname_hint_color"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_rtm_unread"
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:background="@drawable/rtm_unread_message_dot_bg"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/tv_rtm_child_member_name"
        app:layout_constraintStart_toEndOf="@id/tv_rtm_child_member_name" />
</androidx.constraintlayout.widget.ConstraintLayout>