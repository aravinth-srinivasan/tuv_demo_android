                android:layout_weight="1.0"
                android:gravity="center_vertical"
                android:text="@string/str_enable_media_mind" />

            <Switch
                android:id="@+id/enable_media_mind"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight="1.0"
                android:textOff="@string/str_text_off"
                android:textOn="@string/str_text_on" />
        </LinearLayout>
