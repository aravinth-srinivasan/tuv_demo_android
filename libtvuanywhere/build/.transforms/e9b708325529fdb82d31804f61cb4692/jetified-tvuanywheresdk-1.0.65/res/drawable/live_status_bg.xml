<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <padding
                android:left="4dp"
                android:right="4dp" />
            <gradient
                android:angle="180"
                android:endColor="#fff53333"
                android:startColor="#fff5515f" />
            <size
                android:width="45dp"
                android:height="20dp" />
            <corners android:radius="3dp" />
        </shape>
    </item>
</layer-list>