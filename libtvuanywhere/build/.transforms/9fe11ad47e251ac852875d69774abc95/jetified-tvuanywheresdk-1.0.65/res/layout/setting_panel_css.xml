<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="@dimen/ABOUT_PANEL_WIDTH"
    android:layout_height="fill_parent"
	android:background="@drawable/border"
    android:orientation="vertical">
	<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:scrollbars="vertical"    
    android:fadingEdge="none"
	>
	<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
	>
	<LinearLayout 
	android:id="@+id/resolution_LinearLayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
	android:clickable="true"
    android:focusable="true"
	android:background="@drawable/setting_button_selector"
	>
		<TextView
			android:id="@+id/text_resolution"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content" 
			android:text="Resolution"
			android:textColor="@color/light_grey_2"
			android:paddingTop="6dp"
			android:paddingLeft="12dp"
			android:textSize="16sp"
		/>
		<TextView
			android:id="@+id/resolution_value"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content" 
			android:textColor="@color/light_grey"
			android:text="1080x720"
			android:paddingLeft="12dp"
			android:paddingTop="2dp"
			android:paddingBottom="6dp"
		/>
	</LinearLayout>
	<LinearLayout 
	android:id="@+id/framerate_LinearLayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
	android:clickable="true"
    android:focusable="true"
	android:background="@drawable/setting_button_selector"
	>
		<TextView
			android:id="@+id/text_framerate"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content" 
			android:text="Frame rate"
			android:textColor="@color/light_grey_2"
			android:paddingLeft="12dp"
			android:paddingTop="6dp"
			android:textSize="16sp"
		/>
		<TextView
			android:id="@+id/framerate_value"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content" 
			android:textColor="@color/light_grey"
			android:text="15P"
			android:paddingLeft="12dp"
			android:paddingTop="2dp"
			android:paddingBottom="6dp"
		/>
	</LinearLayout>
	
	<LinearLayout 
		android:id="@+id/colorformat_LinearLayout"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical" 
		android:clickable="true"
		android:focusable="true"
		android:background="@drawable/setting_button_selector">
		<TextView
			android:id="@+id/text_colorformat"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content" 
			android:text="Color format"
			android:textColor="@color/light_grey_2"
			android:paddingLeft="12dp"
			android:paddingTop="6dp"
			android:textSize="16sp"/>
		<TextView
			android:id="@+id/colorformat_value"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content" 
			android:textColor="@color/light_grey"
			android:text="1 color"
			android:paddingLeft="12dp"
			android:paddingTop="2dp"
			android:paddingBottom="6dp"/>
	</LinearLayout>
	
	<Button
        android:id="@+id/buttonMetadata"
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:text="Meta data"
        android:textSize="16sp"
        android:textColor="@color/light_grey_2"
        android:gravity="center_vertical"
        android:background="@drawable/setting_button_selector"
        android:paddingLeft="12dp"
    />
	</LinearLayout>
	</ScrollView>
</LinearLayout>
