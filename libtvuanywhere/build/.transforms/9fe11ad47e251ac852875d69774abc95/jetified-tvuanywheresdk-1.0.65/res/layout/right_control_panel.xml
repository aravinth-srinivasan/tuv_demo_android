<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="75dp"
    android:layout_height="match_parent"
    android:background="@color/background">

    <Button
        android:id="@+id/buttonCamera"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_switch_camera"
        app:layout_constraintEnd_toEndOf="@+id/buttonStartR"
        app:layout_constraintStart_toStartOf="@+id/buttonStartR"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonFlash"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/ic_flash_off"
        app:layout_constraintBottom_toTopOf="@id/buttonStartR"
        app:layout_constraintEnd_toEndOf="@+id/buttonStartR"
        app:layout_constraintStart_toStartOf="@+id/buttonStartR"
        app:layout_constraintTop_toBottomOf="@id/buttonCamera" />

    <Button
        android:id="@+id/buttonStartR"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/start_live_bg"
        android:text="@string/str_right_panel_live"
        android:textColor="#ffffffff"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnJoinMeeting"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/ic_agora_join_meeting"
        app:layout_constraintBottom_toTopOf="@id/imageSetting"
        app:layout_constraintEnd_toEndOf="@id/buttonStartR"
        app:layout_constraintStart_toStartOf="@id/buttonStartR"
        app:layout_constraintTop_toBottomOf="@id/buttonStartR" />

    <Button
        android:id="@+id/imageSetting"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/ic_setting"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/buttonStartR"
        app:layout_constraintStart_toStartOf="@id/buttonStartR" />
</androidx.constraintlayout.widget.ConstraintLayout>